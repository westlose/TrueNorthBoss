<Project Sdk="Dalamud.NET.SDK/11.0.0">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Version>1.0.0</Version>
    <AssemblyName>TrueNorthBoss</AssemblyName> <!-- This controls the DLL name -->
    <RootNamespace>TrueNorthBoss</RootNamespace>
    <Description>Displays a north-facing indicator on the target ring.</Description>
    <PackageProjectUrl>https://github.com/YourGitHub/TrueNorthBossPlugin</PackageProjectUrl>
    <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="..\Data\goat.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>
</Project>
